<h2>Show talk</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @submission.title %>
  </li>

  <li>
    <strong>Shortsummary:</strong>
    <%= @submission.shortsummary %>
  </li>

  <li>
    <strong>Duration:</strong>
    <%= @submission.duration %>
  </li>

  <li>
    <strong>Externallink:</strong>
    <%= @submission.externallink %>
  </li>

</ul>

<div class="form-group">
    <%= link "Edit", to: talk_path(@conn, :edit, @submission), class: "btn btn-small btn-primary" %>
    <%= link "Back", to: talk_path(@conn, :index), class: "btn btn-secondary" %>
</div>
